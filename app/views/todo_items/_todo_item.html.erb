
<div class="row clearfix">
	<%if todo_item.completed? %>
	<div class="uncomplete">
		<%= link_to "Uncomplete", uncomplete_rotation_todo_item_path(@rotation, todo_item.id), method: :patch %>
	</div>
	<div class="todo_item">
		<p style="opacity: 0.4;"><strike><%= todo_item.content %></strike>
		<br>Completed at: <%=todo_item.completed_at %>
		</p>
	</div>
	<div class="trash">
		<%= link_to "Delete" , rotation_todo_item_path(@rotation, todo_item.id), method: :delete, data:{confirm: "Are you sure?"} %>
	</div>


	<%else %>
		<div class="complete">
		<%= link_to "Complete",complete_rotation_todo_item_path(@rotation, todo_item.id), method: :patch %>
	</div>
	<div class="todo_item">
		<p><%= todo_item.content %>
			<%= todo_item.due_date %>
		</p>
	</div>
	<div class="trash">
		<%= link_to "Delete" , rotation_todo_item_path(@rotation, todo_item.id), method: :delete, data:{confirm: "Are you sure?"} %>
	</div>
	<%end%>
</div>

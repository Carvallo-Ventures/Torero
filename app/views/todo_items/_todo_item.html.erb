
<div class="row clearfix">
	<%if todo_item.completed? %>

		<div class="todo_item">
			<p style="opacity: 0.4;"><strike><%= todo_item.content %></strike>
			<br>Completed at: <%=todo_item.completed_at %>
			</p>
		</div>

		<div class="uncomplete">
			<%= link_to uncomplete_rotation_todo_item_path(@rotation, todo_item.id), method: :patch do%>
			<i style="opacity: 0.4;" class="fa fa-plus"></i>
			<%end%>
		</div>
		<div class="trash">
			<%= link_to rotation_todo_item_path(@rotation, todo_item.id), method: :delete, data:{confirm: "Are you sure?"} do%>
			<i style="opacity: 0.4;" class="fa fa-trash-o"></i>
			<%end%>
		</div>

	</div>

	<%else %>
		<div class="complete">
		<%= link_to complete_rotation_todo_item_path(@rotation, todo_item.id), method: :patch do%>
		<i class="fa fa-check"></i>
		<%end%>
	</div>
	<div class="todo_item">
		<p><%= todo_item.content %><br>
			Due: <%= todo_item.due_date %>
		</p>
	</div>
	<div class="trash">
		<%= link_to rotation_todo_item_path(@rotation, todo_item.id), method: :delete, data:{confirm: "Are you sure?"} do %>
			<i class="fa fa-trash-o"></i>
		<%end%>
	</div>
	<%end%>
</div>
